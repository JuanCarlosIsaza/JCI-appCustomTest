<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:macrosTable="sap.fe.macros.table"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="com.test.onlymain.ext.main.Main"
>
    <Page
        id="Main"
        title="{i18n>MainTitle}"
    >
        <content>
            <Button
                id="createButton"
                text="Create a new Passenger"
                press="onCreatePress"
                type="Emphasized"
                class="sapUiSmallMarginBegin sapUiSmallMarginBottom"
            />

            <Panel
                id="mainPanel"
                expandable="true"
                expanded="false"
                headerText="Existing Passengers"
                width="95%"
                class="sapUiSmallMarginBegin"
            >
                <macros:FilterBar
                    metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
                    liveMode="true"
                    id="filterBar"
                />

                <macros:Table
                    metaPath="@com.sap.vocabularies.UI.v1.LineItem"
                    readOnly="true"
                    filterBar="filterBar"
                    id="table"
                >
                    <macros:actions>
                        <macrosTable:Action
                            id="idChange"
                            key="change"
                            text="Change"
                            enabled="true"
                            press="onChange"
                            requiresSelection="true"
                        />
                    </macros:actions>
                </macros:Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
