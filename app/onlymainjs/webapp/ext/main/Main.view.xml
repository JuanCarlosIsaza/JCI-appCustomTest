<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:macrosTable="sap.fe.macros.table" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:commons="sap.suite.ui.commons" controllerName="onlymainjs.ext.main.Main">
    <Page id="Main" title="{i18n>MainTitle}">
        <content>
            <Panel id="mainPanel" expandable="true" expanded="true" headerText="Existing Passengers" width="95%" class="sapUiSmallMarginBegin">
                <macros:FilterBar metaPath="@com.sap.vocabularies.UI.v1.SelectionFields" liveMode="true" id="filterBar"/>
                <macros:Table metaPath="@com.sap.vocabularies.UI.v1.LineItem" readOnly="true" filterBar="filterBar" id="table" selectionMode="Multi" selectionChange="onSelectionChange">
                    <macros:actions>
                        <macrosTable:Action id="idMassAccept" key="MassAccept" text="Mass Accept" enabled="true" press="onMassAcceptAction" requiresSelection="true"/>
                    </macros:actions>
                    <macros:columns>
                        <macrosTable:Column id="idAcceptAction" header="Accept" importance="High" key="ValidateRecognitionsAction" width="5em" horizontalAlign="Center" placement="Before" anchor="DataField::Status">
                            <Button id="idAcceptActionButton" type="Accept" icon="sap-icon://undefined/accept" press="onActionAcceptSingles" customData:Status="{Status}"/>
                        </macrosTable:Column>
                        <macrosTable:Column id="idMicroProcessFlow" header="Process Flow">
                            <commons:MicroProcessFlow id="_IDGenMicroProcessFlow1">
                                <commons:content>
                                    <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem1" icon="sap-icon://account"/>
                                    <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem2" state="Success" icon="sap-icon://activity-items"/>
                                    <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem3" state="Warning" icon="sap-icon://account"/>
                                    <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem4" state="Information" icon="sap-icon://account"/>
                                    <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem5" state="Error" icon="sap-icon://cancel"/>
                                </commons:content>
                            </commons:MicroProcessFlow>
                        </macrosTable:Column>
                    </macros:columns>
                </macros:Table>
            </Panel>
        </content>
    </Page>
</mvc:View>